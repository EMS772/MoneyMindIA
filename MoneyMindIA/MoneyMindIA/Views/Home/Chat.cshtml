@{
    Layout = "_ChatLayout";
}

<div class="chat-container">
    <!-- Encabezado Simplificado -->
    <div class="chat-header">
        <h1>Asistente Financiero</h1>
    </div>

    <!-- Área de Conversación -->
    <div class="chat-conversation">
        <!-- Mensajes -->
        <div class="chat-messages" id="chatMessages">
            <!-- Los mensajes se agregarán dinámicamente -->
        </div>
    </div>

    <!-- Preguntas Frecuentes Fijas -->
    <div class="quick-actions">
        <h3>Preguntas frecuentes</h3>
        <div class="actions-grid">
            <button class="action-button">
                <i class="fas fa-chart-pie"></i>
                <span>¿En qué gasto más dinero cada mes?</span>
            </button>
            <button class="action-button">
                <i class="fas fa-bullseye"></i>
                <span>¿Estoy en camino de alcanzar mi meta de ahorro?</span>
            </button>
            <button class="action-button">
                <i class="fas fa-coins"></i>
                <span>¿Cómo puedo ahorrar más según mis hábitos actuales?</span>
            </button>
        </div>
    </div>
</div>