
@{
    Layout = "_Layout";
}


<!-- Header -->
<div class="header">
    <h1>Billetera</h1>
    <p class="subtext">Administra tus métodos de pago</p>
</div>

<!-- Add PayPal Section -->
<div class="add-paypal-section">
    <div class="paypal-container">
        <div class="paypal-placeholder" id="paypalPlaceholder">
            <i class="fab fa-paypal"></i>
            <p>No tienes cuentas de PayPal vinculadas</p>
        </div>
        <button class="add-paypal-button" id="addPaypalButton">
            <i class="fab fa-paypal"></i>
            Vincular PayPal
        </button>
    </div>
</div>

<!-- Linked PayPal Account -->
<div class="linked-account" id="linkedAccount" style="display: none;">
    <div class="account-card">
        <div class="account-logo">
            <i class="fab fa-paypal"></i>
        </div>
        <div class="account-details">
            <p class="account-name">Nombre del Dueño</p>
            <p class="account-email">correo@paypal.com</p>
        </div>
    </div>
</div>

<!-- PayPal Script -->
<script>
    document.getElementById('addPaypalButton').addEventListener('click', function () {
        // Simulación de vinculación de PayPal
        const paypalPlaceholder = document.getElementById('paypalPlaceholder');
        const linkedAccount = document.getElementById('linkedAccount');

        // Ocultar el placeholder y mostrar la cuenta vinculada
        paypalPlaceholder.style.display = 'none';
        linkedAccount.style.display = 'block';

        // Aquí puedes agregar la lógica real para vincular PayPal
        alert('Redirigiendo a PayPal para vincular tu cuenta...');
    });
</script>

